  "Email__c": "{{ data.email }}",
  "Mobile__c": "{{ data.mobile }}",
  "BillingCountry": "{{ data.country }}",
  "BillingState": "{{ data.state }}",
  "MembershipType__c": "{{ data.membershipType }}",
  "Asset_Types_of_Interest__c": "{{ data.assetTypesOfInterest }}",
  "IndustryInterests__c": "{{ data.assetIndustry }}",
  "Buyer_Type__c": "{{ data.buyerType }}",
  "Intermediary_Type__c": "{{ data.intermediaryType }}",
  "Ecosystems__c": "{{ data.ecosystem }}",
