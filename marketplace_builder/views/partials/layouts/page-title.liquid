{% capture meta_title %}{% yield 'meta_title' %}{% endcapture %}
{% capture project_name %}{% yield 'project_name' %}{% endcapture %}

{% assign title_separator = '|' %}
{% comment %} {% assign project_name = '<%= name %>' %} {% endcomment %}

{% if meta_title.size > 0 %}
  {% capture title %}{{ meta_title }} {{ title_separator }} {{ project_name }}{% endcapture %}
{% else %}
  {% if project_name.size > 0 %}
    {% capture title %}{{ project_name }}{% endcapture %}
  {% else %}
     {% capture title %}PrimaryMarkets | Delivering Liquidity{% endcapture %}
  {% endif %}  
{% endif %}

<title>{{ title }}</title>
